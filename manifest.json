{
  "manifest_version": 3,
  "name": "Indiamart Lead Fetcher",
  "version": "1.0",
  "description": "Fetches lead data from Indiamart Lead Manager",
  "permissions": ["storage", "tabs", "webRequest", "cookies"],
  "host_permissions": [
    "https://seller.indiamart.com/*",
    "https://webhook.site/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "background": {
    "service_worker": "background/secureBackground.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://seller.indiamart.com/messagecentre*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "wasm/secure_wasm_logic.js",
        "wasm/secure_wasm_logic_bg.wasm",
        "contentScripts/secureContent.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
